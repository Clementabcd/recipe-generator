{
  "version": 2,
  "builds": [
    {
      "src": "api/claude.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/claude",
      "dest": "/api/claude.js"
    },
    {
      "src": "/(.*)",
      "dest": "/build/$1"
    }
  ]
}